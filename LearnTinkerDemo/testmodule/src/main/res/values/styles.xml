<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowAnimationStyle">@style/noAnimation</item>
    </style>



    <style name="AVLoadingIndicatorView">
        <item name="minWidth">48dip</item>
        <item name="maxWidth">48dip</item>
        <item name="minHeight">48dip</item>
        <item name="maxHeight">48dip</item>
        <item name="indicatorName">BallPulseIndicator</item>
    </style>

    <style name="AVLoadingIndicatorView.Large">
        <item name="minWidth">76dip</item>
        <item name="maxWidth">76dip</item>
        <item name="minHeight">76dip</item>
        <item name="maxHeight">76dip</item>
        <item name="indicatorName">BallPulseIndicator</item>
    </style>

    <style name="AVLoadingIndicatorView.Small">
        <item name="minWidth">24dip</item>
        <item name="maxWidth">24dip</item>
        <item name="minHeight">24dip</item>
        <item name="maxHeight">24dip</item>
        <item name="indicatorName">BallPulseIndicator</item>
    </style>

    <!-- 自定义tab-->
    <declare-styleable name="PagerSlidingTabStrip">
        <!--滑动条的颜色-->
        <attr name="pstsIndicatorColor" format="color" />
        <!-- 滑动条所在的那个全宽线的颜色-->
        <attr name="pstsUnderlineColor" format="color" />
        <!-- 每个标签分割线的颜色-->
        <attr name="pstsDividerColor" format="color" />
        <!-- 滑动条的高度-->
        <attr name="pstsIndicatorHeight" format="dimension" />
        <!-- 滑动条所在的那个全宽线的高度-->
        <attr name="pstsUnderlineHeight" format="dimension" />
        <!-- 分割线底部和顶部填充的宽度-->
        <attr name="pstsDividerPadding" format="dimension" />
        <!-- 每个标签左右填充宽度-->
        <attr name="pstsTabPaddingLeftRight" format="dimension" />
        <!-- -->
        <attr name="pstsScrollOffset" format="dimension" />
        <!-- 每个标签的背景，应该为StateListDrawable-->
        <attr name="pstsTabBackground" format="reference" />
        <!-- 如果为true ,每个标签是相同的控件，平均分整个屏幕，默认是 false-->
        <attr name="pstsShouldExpand" format="boolean" />
        <!-- 如果为 true,标签都是大写字母-->
        <attr name="pstsTextAllCaps" format="boolean" />
    </declare-styleable>
    <style name="weixinTheme"  parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowAnimationStyle">@style/noAnimation</item>
        <item name="android:windowBackground">@color/text_white</item>
        <item name="android:windowEnableSplitTouch">false</item>
        <item name="android:splitMotionEvents">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="noAnimation"  parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/rotate</item>
        <item name="android:activityOpenExitAnimation">@anim/rotate</item>
        <item name="android:activityCloseEnterAnimation">@anim/rotate</item>
        <item name="android:activityCloseExitAnimation">@anim/rotate</item>
        <item name="android:taskOpenEnterAnimation">@anim/rotate</item>
        <item name="android:taskOpenExitAnimation">@anim/rotate</item>
        <item name="android:taskCloseEnterAnimation">@anim/rotate</item>
        <item name="android:taskCloseExitAnimation">@anim/rotate</item>
        <item name="android:taskToFrontEnterAnimation">@anim/rotate</item>
        <item name="android:taskToFrontExitAnimation">@anim/rotate</item>
        <item name="android:taskToBackEnterAnimation">@anim/rotate</item>
        <item name="android:taskToBackExitAnimation">@anim/rotate</item>
    </style>
</resources>
